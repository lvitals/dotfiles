* {
    background-color:    #222222;
    border-color:        White;
    text-color:          LightGray; 
    font:                "Source Code Pro 10";
}

#window {
    anchor:     north;
    location:   north;
    width:      100%;
    padding:    1px;
    children:   [ horibox ];
}

#horibox {
    orientation: horizontal;
    children:   [ prompt, entry, listview ];
}

#prompt { enabled: false; }

#entry {
    expand:     false;
    width:      14em;
    padding:    2px 2px 2px 2px;
}

#listview {
    layout:     horizontal;
    spacing:    5px;
    lines:      100;
}

#element {
    padding: 2px 2px 2px 2px;
}

#element selected {
    background-color: #285577;
}

